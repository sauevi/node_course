{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "func-names": "off",
    "linebreak-style": "off",
    "comma-dangle": ["error", "only-multiline"],
    "import/no-commonjs": [
      2,
      {
        "allowRequire": true
      }
    ],
    "radix": "off"
  },
  "ignorePatterns": "/tests/*"
}
